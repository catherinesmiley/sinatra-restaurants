<style>

  body {
    background-color: #FFEBCF;
    line-height: 18px;
  }

  .nav {
    list-style-type: none;
    text-align: center;
    font-family: sans-serif;
    margin: 0;
    padding: 0;
  }

  .nav li {
    display: inline-block;
    font-size: 18px;
    font-family: sans-serif;
    padding: 20px;
  }

  a:link {
    color: #F0B7A4;
  }

  a:visited {
    color: #F18C8E;
  }

  a:hover {
    color: #F18C8E;
  }

  h1 {
    font-family: sans-serif;
    color: #305F72;
    font-size: 36px;
    line-height: 54px;
  }

  h2 {
    font-size: 24px;
    font-family: sans-serif;
    line-height: 36px;
    margin-bottom: 16px;
  }

  h3 {
    font-size: 18px;
    font-family: sans-serif;
    line-height: 36px;
  }

  p {
    color: #305F72;
    font-family: sans-serif;
  }


</style>

  </head>
  <body>
    <ul class="nav">
      <% if Helpers.logged_in?(session) %>
        <li><a href="/users/<%=Helpers.current_user(session).id if Helpers.logged_in?(session) %>">My Homepage</a></li>
        <li><a href="/restaurants/new">New Restaurant</a></li>
        <li><a href="/restaurants">All Restaurants</a></li>
        <li><a href="/users">All Users</a></li>
        <li><a href="/logout" class="logout">Log Out</a></li>
      <% end %>

        <%= yield %>
