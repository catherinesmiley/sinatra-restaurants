<h1><%= @restaurant.name %></h1>
<br>
<p>City: <%= @restaurant.city %></p>
<p>Category: <%= @restaurant.category %></p>
<p>Menu Item 1: <%= @menu_items[0]["name"] %></p>
<p>Menu Item Description 1: <%= @menu_items[0]["description"] %></p>
<p>Menu Item 2: <%= @menu_items[1]["name"] %></p>
<p>Menu Item Description 1: <%= @menu_items[1]["description"] %></p>
<p>Notes: <%= @restaurant.notes %></p>

<% if Helpers.current_user(session) == @restaurant.user %>
    <a href="/restaurants/<%= @restaurant.id %>/edit">Edit Restaurant</a>
<form action="/restaurants/<%= @restaurant.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit">Delete Restaurant</button>
</form>
<% end %>