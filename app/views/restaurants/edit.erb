<h1>Edit Restaurant</h1>
<br>
<form action="/restaurants/<%= @restaurant.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <h3><label>Name: </label></h3>
    <input type="text" name="restaurant[name]" value="<%= @restaurant.name %>"/><br />
    <h3><label>City: </label></h3>
    <input type="text" name="restaurant[city]" value="<%= @restaurant.city %>"/><br />
    <h3><label>Category: </label></h3>
    <input type="text" name="restaurant[category]" value="<%= @restaurant.category %>"/><br />
    <h3><label>Menu Item 1: </label></h3>
    <input type="text" name="menu_items[][name]" value="<%= @menu_items[0]["name"] if @menu_items[0] %>"/><br />
    <input type="hidden" name="menu_items[][id]" value="<%= @menu_items[0]["id"] if @menu_items[0] %>"/>
    <h3><label>Menu Item Description 1: </label></h3>
    <input type="text" name="menu_items[][description]" value="<%= @menu_items[0]["description"] if @menu_items[0] %>"/><br />
    <h3><label>Menu Item 2: </label></h3>
    <input type="text" name="menu_items[][name]" value="<%= @menu_items[1]["name"] if @menu_items[1] %>"/><br />
    <input type="hidden" name="menu_items[][id]" value="<%= @menu_items[1]["id"] if @menu_items[1] %>"/>
    <h3><label>Menu Item Description 2: </label></h3>
    <input type="text" name="menu_items[][description]" value="<%= @menu_items[1]["description"] if @menu_items[1] %>"/><br />
    <h3><label>Notes: </label></h3>
    <input type="text" name="restaurant[notes]" value="<%= @restaurant.notes %>" /><br />
    <br>
    <button type="submit">Edit Restaurant</button>
</form>